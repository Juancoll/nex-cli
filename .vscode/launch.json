    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "nex ts ws gen-client",
            "program": "${workspaceFolder}/dist/cli.js",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "args": [
                "ts",
                "ws",
                "gen-client",
                "--build"
            ],
            "env": {
                "NODE_ENV": "debug",               
            }
        },
        {
            "type": "node",
            "request": "launch",
            "name": "nex cs ws gen-client",
            "program": "${workspaceFolder}/dist/cli.js",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "args": [
                "cs",
                "ws",
                "gen-client",
                "--build"
            ],
            "env": {
                "NODE_ENV": "debug"
            }
        }
    ]
}