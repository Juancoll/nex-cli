v-container.flex.v-container.full.items.h-center.top
    v-card.h-full
        div.flex.v-container     
            div.flex.h-container.h-center
                div(style="margin-right: 15px") WS Socket 
                div(style="margin-right: 05px;color:gray") [ isConnected: 
                div(v-if="isConnected" style="color: green") true
                div(v-else style="color: red") false
                div(style="margin-left: 5px; color: gray") ]
                div.flex.item.grow-x1   

            div.flex.h-container.items.v-center
                v-text-field(v-model="url" style="margin:5px" label="url base")
                v-text-field(v-model="path" style="margin:5px" label="path") 
                v-text-field(v-model="nsp" style="margin:5px" label="namespace")

            div.flex.h-container.items.v-center
                v-btn.custom.primary(v-on:click="connect") connect                        
                v-btn.custom.primary(v-on:click="disconnect") disconnect

    v-card.custom.h-full
        div.h-full.flex.v-container     
            div.flex.h-container.h-center
                div(style="margin-right: 15px") WS Auth Client  
                div(style="margin-right: 05px;color:gray") [ isAuthenticate: 
                div(v-if="isAuthenticate" style="color: green") true
                div(v-else style="color: red") false
                div(style="margin-left: 5px; color: gray") ]
                div.flex.item.grow-x1   

            
            v-text-field(v-model="mail" style="margin:5px" label="email")
            v-text-field(v-model="pass" style="margin:5px" label="password")

            div.flex.h-container.items.v-center
                v-btn.custom.primary(v-on:click="register") register
                v-btn.custom.primary(v-on:click="login") login
                v-btn.custom.primary(v-on:click="authenticate") authenticate
                v-btn.custom.primary(v-on:click="logout") logout

    router-view